@model EnglishCourse.Model.ViewModels.QuestionVM

@inject EnglishCourse.Logic.Interfaces.IAnswerService _answerService

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel panel-heading">
            <p>@Model.Text</p>
        </div>
        <div class="panel-body">
            <div class="btn-group">
                @{
                    var answers = _answerService.GetAll().Where(x => x.QuestionId == Model.QuestionId).ToList();

                    for (int i = 0; i < answers.Count(); i++)
                    {
                        <input type="radio" name="@Model.QuestionId" value="@answers[i].Text" /> @answers[i].Text
                        <br />
                    }
                }
            </div>
        </div>
    </div>
</div>