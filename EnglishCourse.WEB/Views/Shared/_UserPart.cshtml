@using EnglishCourse.Model.ViewModels
@model ThemeVM
@{
    string description = Model.Description;

    @if (description.Length > 100)
    {
        description = description.Substring(0, 100) + "...";
    }
    else if (description.Length < 50)
    {
        description = description.Substring(0, 40) + "...";
    }
    else if (description.Length < 10)
    {
        description = description.Substring(0, 8) + "...";
    }
    else if (description.Length < 5)
    {
        description = description.Substring(0, 4) + "...";
    }
}

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel panel-heading">
            <p>@Model.Name</p>
        </div>
        <div class="panel-body">
            <div style="margin-bottom:15px">
                @description
            </div>
            <div class="btn-group">
                <a class="btn btn-info" asp-area="" asp-controller="Theme" asp-action="Details" asp-route-id="@Model.ThemeId">Details Theme</a>
                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Tests" asp-route-id="@Model.ThemeId">Tests</a>
            </div>
        </div>
    </div>
</div>
